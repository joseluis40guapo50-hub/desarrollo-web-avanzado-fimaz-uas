<?php

class Calculadora {

    public function dividir($a, $b){

        if($b == 0){
            throw new Exception("No se puede dividir entre cero");
        }

        return $a / $b;
    }

}
<?php

require_once "Calculadora.php";

$calc = new Calculadora();

try{
    echo $calc->dividir(10,2);
}catch(Exception $e){
    echo $e->getMessage();
}
