<?php

interface Figura {
    public function area();
}
<?php

require_once "Figura.php";

class Cuadrado implements Figura {

    private $lado;

    public function __construct($lado){
        $this->lado = $lado;
    }

    public function area(){
        return $this->lado * $this->lado;
    }

}
<?php

require_once "Cuadrado.php";

$c = new Cuadrado(5);

echo "Área: ".$c->area();
# Práctica 3 – Parcial 1

